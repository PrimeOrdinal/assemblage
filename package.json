{
  "author": "Karl Podger",
  "bit": {
    "componentsDefaultDirectory": "components/{name}",
    "env": {},
    "packageManager": "npm"
  },
  "bugs": {
    "url": "https://github.com/assemblage/web-components/issues"
  },
  "dependencies": {},
  "description": "Web components",
  "devDependencies": {
    "@types/jest": "^24.0.15",
    "@types/node": "^12.0.10",
    "eslint": "^6.0.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-typescript": "^0.14.0",
    "husky": "^2.7.0",
    "jest": "^24.8.0",
    "lerna": "^3.15.0",
    "lint-staged": "^8.2.1",
    "ts-jest": "^24.0.2",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "typedoc": "^0.14.2",
    "typescript": "^3.5.2",
    "typescript-eslint-parser": "^22.0.0"
  },
  "homepage": "https://github.com/assemblage/web-components#readme",
  "husky": {
    "hooks": {
      "post-commit": "lint-staged",
      "pre-push": "lerna run test"
    }
  },
  "jest": {
    "coverageReporters": [
      "html"
    ],
    "moduleFileExtensions": [
      "ts"
    ],
    "testRegex": "src/.+\\.test\\.ts$",
    "transform": {
      ".ts": "ts-jest"
    }
  },
  "keywords": [
    "component",
    "custom",
    "element",
    "web"
  ],
  "license": "GPL-3.0",
  "lint-staged": {
    "*.{js,ts}": [
      "git add",
      "lerna run lint"
    ]
  },
  "main": "index.js",
  "name": "assemblage",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/assemblage/web-components.git"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "compile": "npx tsc -b $(find components -type d -mindepth 1 -maxdepth 1) --verbose",
    "compile:watch": "npm run-script compile -- --watch",
    "start": "npm run-script bootstrap && npm run-script link && npm run-script compile:watch",
    "link": "lerna link",
    "publish": "lerna run tsc && lerna publish",
    "test": "jest"
  },
  "version": "0.1.0"
}